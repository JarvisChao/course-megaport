mixin Blockade(options)
  -
    // Object.assign 用來合併預設值及傳進來的 options 值
    const props = Object.assign({
      // 預設值
      text: '台灣最生猛海派的音樂祭 ——『 大港開唱 』'
    }, options);

  //- &attributes(attributes) 傳入 html 屬性
  .c-blockade&attributes(attributes)
    .c-blockade__line
      span.c-blockade__text #{props.text}
    .c-blockade__line
      span.c-blockade__text #{props.text}
    .c-blockade__line
      span.c-blockade__text #{props.text}
    .c-blockade__line
      span.c-blockade__text #{props.text}