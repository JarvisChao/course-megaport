include ./_Btn.pug

mixin Card(options, index)
  -
    // Object.assign 用來合併預設值及傳進來的 options 值
    const props = Object.assign({
      // 預設值
      date: '',
      title: '',
      description: '',
      img: '',
      content: '',
      link: `${basePath}/news/detail/${index}.html`
    }, options);

  article.c-card
    span.o-text-lg.c-card__date #{props.date}
    .c-card__wrap
      a.u-img-ratio.c-card__img-mask(href=props.link)
        img.u-object-fit.-abs.js-lazy(data-src=props.img, alt=props.title)
      .c-card__body
        h3.u-text-md.u-fw-700 #{props.title}
        p.u-line-clamp-2.c-card__desc #{props.description}
        +Btn({
          href: props.link,
          align: 'right'
        }).u-mt-auto MORE
