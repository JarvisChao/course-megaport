footer(class="l-footer")
  //- onclick="lenis.scrollTo('body')"
  div(class="o-gotop" onclick="lenis.scrollTo(0, { duration: 1.5 })")
    iconify-icon(icon="fa-solid:long-arrow-alt-up" class="u-icon-sm")
    span(class="fw-900") TOP

  div(class="l-footer-date")
    div(class="l-footer-date__bg-mask" data-parallax-offset="200")
      img(
        src=`${basePath}/img/footer/bg.jpg` alt="大港開唱資訊"
        class="u-object-fit -parallax"
      )
    div(class="l-footer-date__img-mask")
      img(src=`${basePath}/img/footer/date.svg`, alt="大港開唱資訊")

  div(class="l-footer__menu")
    ul(class="l-footer__btn-box")
      li(class="l-footer__btn-wrap")
        a(href=`${basePath}/#lineup` class="l-footer__btn")
          span(class="l-footer__text -en") LINEUP
          span(class="l-footer__text -zh") 演出陣容
      li(class="l-footer__btn-wrap")
        a(href=`${basePath}/#news` class="l-footer__btn")
          span(class="l-footer__text -en") NEWS
          span(class="l-footer__text -zh") 最新消息
      li(class="l-footer__btn-wrap")
        a(href=`${basePath}/#about` class="l-footer__btn")
          span(class="l-footer__text -en") ABOUT
          span(class="l-footer__text -zh") 關於大港
      li(class="l-footer__btn-wrap")
        a(href="##" class="l-footer__btn")
          span(class="l-footer__text -en") TIMETABLE
          span(class="l-footer__text -zh") 節目表
      li(class="l-footer__btn-wrap")
        a(href="##" class="l-footer__btn")
          span(class="l-footer__text -en") TICKET
          span(class="l-footer__text -zh") 購票資訊
      li(class="l-footer__btn-wrap")
        a(href="contact.html" class="l-footer__btn")
          span(class="l-footer__text -en") MAP
          span(class="l-footer__text -zh") 地圖導覽

    ul(class="l-footer__link-box")
      li(class="l-footer__link-wrap")
        //- .leading-1 解決高度問題
        a(
          href="https://www.facebook.com//megaportfest/"
          target="_blank" class="leading-1"
        )
          iconify-icon(icon="mingcute:facebook-fill" class="u-icon")
      li(class="l-footer__link-wrap")
        a(
          href="https://www.instagram.com/megaportfest/"
          target="_blank" class="leading-1"
        )
          iconify-icon(icon="mingcute:ins-fill" class="u-icon")
      li(class="l-footer__link-wrap")
        a(
          href="https://www.youtube.com/channel/UC7xWU14_GGYKVqoSLg1M8EQ/feed"
          target="_blank" class="leading-1"
        )
          iconify-icon(icon="mingcute:youtube-fill" class="u-icon")

    span(class="text-sm") © 2024 Jarvis Course. All rights reserved.

