  .o-gotop
    .o-gotop__arrow
      i.fas.fa-long-arrow-alt-up
    .o-gotop__text TOP

  .l-footer__date-mask(uk-parallax="bgy: 100")
    img.l-footer__img-date(src="img/footer/footer-date.svg", alt="大港開唱資訊")

  .l-footer__sitemap
    ul.l-footer__btn-box
      li.l-footer__btn-wrap
        a.l-footer__btn(href="##")
          .l-footer__text-btn.--en.u-text-footer INFO
          .l-footer__text-btn.--zh.u-text-footer 相關資訊
      li.l-footer__btn-wrap
        a.l-footer__btn(href="##")
          .l-footer__text-btn.--en.u-text-footer NEWS
