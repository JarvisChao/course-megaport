                  href: 'about.html',
                  position: 'right'
                }).u-mt-64(data-aos="fade-up") MORE

    include layouts/_Footer.pug

    script(src="js/parallax.min.js")
    script(src="js/gsap.min.js")
    script(src="js/ScrollTrigger.min.js")
    script(src="js/swiper-bundle.min.js")
    include layouts/_Scripts.pug
    script.
      //-- Swiper
      if (window.Swiper !== undefined) {
        const headerSwiper = new Swiper('.l-hero__swiper', {
          effect: 'fade',
          fadeEffect: {
            // crossFade: true,
          },
          // 緩慢施放
          longSwipesRatio: 0.1,
          loop: true,
          speed: 1600,
          autoplay: {
            delay: 3000,
            disableOnInteraction: false,
          },
          // on: {
          //   slideChange: function() {
          //     // alert(this.realIndex)
          //     shapeAni(this.realIndex)
          //   },
          // },
        })

        const newsSwiper = new Swiper('.l-news__swiper', {
          longSwipesRatio: 0.1,
          loop: true,
          speed: 1200,
          slidesPerView: 'auto',
          centeredSlides: true,
          spaceBetween: 16,
          breakpoints: {
            1400: {
              slidesPerView: 4,
              centeredSlides: false,
              spaceBetween: 32,
            },
            1024: {
              slidesPerView: 3,
              centeredSlides: false,
              spaceBetween: 24,
            },
            576: {
              slidesPerView: 2,
              centeredSlides: false,
              spaceBetween: 20,
            },
          },
          on: {
            init: function() {
              lazyLoad.update()
            },
          },
          navigation: {
            prevEl: '.l-news__btn-swiper.--prev',
            nextEl: '.l-news__btn-swiper.--next',
          },
        })
      }