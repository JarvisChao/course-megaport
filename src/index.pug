doctype html
html(lang="en")
  head
    include includes/_config.pug
    include includes/_head.pug

    //- FB 縮圖資訊
    meta(property="og:url" content=baseUrl)
    meta(property="og:image" content=`${baseUrl}/img/og/og.jpg`)
    //- 網頁描述
    meta(property="og:description" content=description)
    meta(name="description" content=description)
    //- 網頁標題
    meta(property="og:title" content=title)
    title #{title}

  body
    include mixins/_blockade.pug
    include includes/_navbar.pug
    
    header.l-header(data-aos="fade")
      .swiper.l-header__swiper
        .swiper-wrapper
          .swiper-slide.l-header__slide
            .l-header__img-mask
              img.u-object-fit(src="img/banner/banner-img01.jpg" alt=title)
          .swiper-slide.l-header__slide
            .l-header__img-mask
              img.u-object-fit(src="img/banner/banner-img02.jpg" alt=title)
          .swiper-slide.l-header__slide
            .l-header__img-mask
              img.u-object-fit(src="img/banner/banner-img03.jpg" alt=title)

    main.l-main
      section.l-lineup.u-pb-0.u-gradient
        +blockade('l-lineup__blockade')

        .l-lineup__sticky
          .container
            .u-mb-80(data-aos="fade-up")
              h2.u-title-xl.u-color-secondary LINEUP
                span.u-text-lg MEGAPORT FESTIVAL

            //- input-element 滑鼠進入指定區塊內才生效
            .row.--gap.l-lineup__box.js-parallax(data-input-element=".l-lineup__box")
              mixin artistCard(options)
                article.l-lineup__artist(class=`${options.size ? `--${options.size}` : ''}`)
                  a.l-lineup__link(href="##" class=`${options.direction ? `--${options.direction}` : ''}` data-aos="fade-up")
                    h3.u-title-md.l-lineup__title #{options.name}
                    //- scalar(10) 設置加速度 / friction(0-1) 設置過渡
                    .js-parallax(data-scalar-y="0" data-friction-x="0.4")
                      .u-img-ratio.l-lineup__img-mask
                        img.u-object-fit.--abs.js-lazy(data-src=options.img alt=`大港開唱藝人名單 ${options.name}`)
                      .u-img-ratio.l-lineup__glitch-mask.--primary(data-depth="-0.2")
                        img.u-object-fit.--abs.js-lazy(data-src=options.img alt=`大港開唱藝人名單 ${options.name}`)
                      .u-img-ratio.l-lineup__glitch-mask.--secondary(data-depth="0.2")
                        img.u-object-fit.--abs.js-lazy(data-src=options.img alt=`大港開唱藝人名單 ${options.name}`)

              .col-sm-5.l-lineup__wrap(data-depth="0.1")
                +artistCard({
                  name: '9m88',
                  img: 'img/lineup/lineup01.jpg',
                  direction: '',
                  size: ''
                })
              .col-sm-7.l-lineup__wrap(data-depth="-0.1")
                +artistCard({
                  name: '恆月三途',
                  img: 'img/lineup/lineup02.jpg',
                  direction: '',
                  size: 'lg'
                })
              .col-lg-4.col-sm-7.l-lineup__wrap(data-depth="-0.2")
                +artistCard({
                  name: 'Beyound Cure',
                  img: 'img/lineup/lineup03.jpg',
                  direction: 'reverse',
                  size: 'lg'
                })
              .col-lg-4.col-sm-5.l-lineup__wrap(data-depth="0.2")
                +artistCard({
                  name: 'Dudu King',
                  img: 'img/lineup/lineup04.jpg',
                  direction: 'reverse',
                  size: ''
                })
              .col-lg-4.col-sm-5.offset-lg-0.offset-sm-4.l-lineup__wrap(data-depth="-0.2")
                +artistCard({
                  name: 'Da Wang',
                  img: 'img/lineup/lineup05.jpg',
                  direction: 'reverse',
                  size: ''
                })

      section.l-news
        .l-news__btn-swiper.--prev
          i.fas.fa-arrow-left
        .l-news__btn-swiper.--next
          i.fas.fa-arrow-right

        .container
          .u-mb-80.u-text-center(data-aos="fade-up")
            h2.u-title-xl.u-color-secondary NEWS
              span.u-text-lg MEGAPORT FESTIVAL
              
          .swiper.l-news__swiper(data-aos="fade-up")
            .swiper-wrapper
              mixin newsCardSlide(item)
                .swiper-slide.l-news__slide
                  article.c-card
                    span.u-text-lg.u-fw-900.c-card__date #{item.date}
                    .c-card__wrap
                      a.u-img-ratio.c-card__img-mask(href=item.link)
                        img.u-object-fit.--abs.js-lazy(data-src=item.img, alt=item.title)
                      .c-card__body
                        h3.u-text-md #{item.title}
                        p.c-card__desc #{item.content}
                        .o-btn.--right.u-mt-auto
                          a.o-btn__link(href=item.link) MORE
              -
                const newsList = [
                  {
                    date: '2021.04.12',
