doctype html
html(lang="en")
  head
    include includes/_config.pug
    include includes/_head.pug

    //- FB 縮圖資訊
    meta(property="og:url" content=baseUrl)
    meta(property="og:image" content=`${baseUrl}/img/og/og.jpg`)
    //- 網頁描述
    meta(property="og:description" content=description)
