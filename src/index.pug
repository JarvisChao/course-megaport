include components/_Blockade.pug
include components/_ArtistCard.pug
include components/_Card.pug
include components/_Btn.pug

doctype html
html(lang="en")
  head
    include layouts/_Settings.pug
    include layouts/_Head.pug

  body
    include layouts/_Header.pug
    

    main.l-main
      .l-hero(data-aos="fade")
        .swiper.l-hero__swiper
          .swiper-wrapper
            .swiper-slide.l-hero__slide
              .l-hero__img-mask
                img.u-object-fit(src="img/banner/banner-img01.jpg" alt=title)
            .swiper-slide.l-hero__slide
              .l-hero__img-mask
                img.u-object-fit(src="img/banner/banner-img02.jpg" alt=title)
            .swiper-slide.l-hero__slide
              .l-hero__img-mask
                img.u-object-fit(src="img/banner/banner-img03.jpg" alt=title)

      section.l-lineup.u-pb-0.u-gradient(id="lineup")
        +Blockade.l-lineup__blockade
        .l-lineup__sticky
          .container
            .u-mb-80(data-aos="fade-up")
              h2.u-text-4xl.u-color-secondary LINEUP
                span.u-text-lg MEGAPORT FESTIVAL

            //- input-element 滑鼠進入指定區塊內才生效
            .row.--gap.l-lineup__box.js-parallax(data-input-element=".l-lineup")
              .col-sm-5.l-lineup__wrap(data-depth="0.1")
                +ArtistCard({
                  name: '9m88',
                  img: 'img/lineup/lineup01.jpg'
                })
              .col-sm-7.l-lineup__wrap(data-depth="-0.1")
                +ArtistCard({
                  name: '恆月三途',
                  img: 'img/lineup/lineup02.jpg',
                  size: 'lg'
                })
              .col-lg-4.col-sm-7.l-lineup__wrap(data-depth="-0.2")
                +ArtistCard({
                  name: 'Beyound Cure',
                  img: 'img/lineup/lineup03.jpg',
                  direction: 'reverse',
                  size: 'lg'
                })
              .col-lg-4.col-sm-5.l-lineup__wrap(data-depth="0.2")
                +ArtistCard({
                  name: 'Dudu King',
                  img: 'img/lineup/lineup04.jpg',
                  direction: 'reverse'
                })
              .col-lg-4.col-sm-5.offset-lg-0.offset-sm-4.l-lineup__wrap(data-depth="-0.2")
                +ArtistCard({
                  name: 'Da Wang',
                  img: 'img/lineup/lineup05.jpg',
                  direction: 'reverse'
                })

